{
  "eventSchema": {
    "title": {
      "type": "String",
      "index": true,
      "required": true
    },
    "slug": {
      "type": "String",
      "index": true
    },
    "description": {
      "type": "String",
      "index": false
    },
    "eventType": {
      "type": "Number",
      "index": true,
      "required": true
    },
    "language": [{ "type": "String" }],
    "startTime": { "type": "Number", "index": true },
    "endTime": { "type": "Number", "index": true },
    "price": { "type": "Number" },
    "currency": {
      "type": "String",
      "index": false
    },
    "images": [{ "type": "String", "index": true }],
    "video": { "type": "String", "index": false },
    "thumbnail": { "type": "String" },
    "status": {
      "type": "Number",
      "default": 1,
      "index": true
    },
    "totalTickets": { "type": "Number" },
    "venue": { "type": "String" },
    "city": { "type": "ObjectId", "ref": "city", "index": true },
    "link": { "type": "String" },
    "eventDuration": { "type": "String" },
    "custom": {
      "titleDe": { "type": "String" },
      "descriptionDe": { "type": "String" }
    }
  }
}